extends /layouts/main
block title
  title Manage #{manageUser.username}
block content
  div(class='panel panel-info')
    div(class='panel-heading') Manage #{manageUser.username}
    div(class='panel-body')
      h4 Username
      p= manageUser.username
      h4 Email
      p= manageUser.email
      h4 Permission level
      p= manageUser.permissionLevel
      h4 Salt
      div(class='table-responsive')
        table(class='table')
          thead
            td= manageUser.salt.toString('hex')
      h4 Password hash
      div(class='table-responsive')
        table(class='table')
          thead
            td= manageUser.passwordHash.toString('hex')
