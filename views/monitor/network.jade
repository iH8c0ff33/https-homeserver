extends /layouts/main
block title
  title Network Monitor
block content
  div(class='col-md-9')
    div(class='panel panel-primary')
      div(class='panel-heading') Netwok
      div(class='panel-body')
        div(class='table-responsive')
          table(class='table table-striped table-hover table-responsive')
            thead
              tr
                th #
                th Address
                th Name
                th State
                th MAC
            tbody(id='tableBody')
              tr
                th #
                th Scanning...
                th Please
                th wait
                th ...
  div(class='col-md-3')
    div(class='panel panel-info')
      div(class='panel-heading') Settings
      div(class='panel-body')
        div(class='checkbox')
          label
            input(type='checkbox')
        a(href='javascript:updateNet()', class="btn btn-raised") Refresh
block scripts
  script(src='/js/socket.io.min.js')
  script(src='/js/net.js')
